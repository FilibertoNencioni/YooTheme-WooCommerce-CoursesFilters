{
    "@import": "./element.php",
    "name": "edition_list_item",
    "title": "Item",
    "width": 500,
    "placeholder": {
        "props": {
            "date": "12/12/2022",
            "site": "Florence"
        }
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "date": {
            "label": "Date",
            "source": true
        },
        "site":{
            "label": "Site",
            "source":"true"
        },
        "status": "${builder.statusItem}",
        "source": "${builder.source}"
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "Content",
                    "fields": [
                        "date",
                        "site"
                    ]
                },
                "${builder.advancedItem}"
            ]
        }
    }
}
